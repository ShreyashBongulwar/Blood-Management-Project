<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bloodbankmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBankManagement">
        <activity
            android:name=".CategorySelectedActivity"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RecipientRegistrationActivity" />
        <activity android:name=".DonorRegistrationActivity" />
        <activity android:name=".SelectRegistrationActivity" />
        <activity android:name=".loginActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>